<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_left_image"
    android:layout_marginTop="@dimen/margin_top_image">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/image_background"
            android:orientation="vertical">

            <!--
            It was hard to do good alignement of image cards. May be it possible to do in java code.
            -->

            <ImageButton
                android:id="@+id/imageCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/image_background" />

            <TextView
                android:id="@+id/textViewBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_text"
                android:paddingLeft="@dimen/padding_text"
                android:paddingTop="@dimen/padding_text"
                android:text="TextViewBase"
                android:textColor="@color/image_name_font"
                android:textSize="@dimen/base_message_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
